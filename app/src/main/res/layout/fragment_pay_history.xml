<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_doctorchat"
    tools:context=".Fragment.PayHistoryFragment">


    <TextView
        android:id="@+id/txtPayLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Payment History"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/payHistoryRecycler"
        android:layout_below="@id/txtPayLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btnHistoryDone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="2dp"
        android:text="Done"
        android:visibility="gone"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:background="#FFEB3B"/>

</RelativeLayout>