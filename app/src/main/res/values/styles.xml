<resources>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#00BCD4</item>
        <item name="boxStrokeColor">#FFC107</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="textInputStyle">@style/AppTextField</item>\
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">

        <item name="strokeColor">#090909</item>
    </style>


    <style name="ThemeLogin" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">20sp</item>
        <item name="android:visible">true</item>
        <item name="boxStrokeColor">#09AAF3</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="textInputStyle">@style/AppTextField</item>

        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="android:layout_margin">5dp</item>
      <!--  <item name=""></item>-->
    </style>



    <style name="ThemeDoctorRegister" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">20sp</item>
        <item name="android:visible">true</item>
        <item name="boxStrokeColor">#151515</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="textInputStyle">@style/AppTextField</item>

        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <!--  <item name=""></item>-->
